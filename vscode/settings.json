{
    // GENERAL
    "workbench.colorTheme": "Atom One Dark",
    "workbench.startupEditor": "none",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.tips.enabled": false,
    "editor.accessibilitySupport": "off",
    "workbench.enableExperiments": false,

    // EXPLORER
    "workbench.colorCustomizations":{"focusBorder":"#0000"},
    "explorer.sortOrder": "type",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",

    // EDITOR
    "editor.fontSize": 16,
    "editor.tabSize": 2,
    "editor.scrollBeyondLastLine": false,
    "editor.rulers": [80, 120],
    "editor.detectIndentation": false,

    "editor.quickSuggestions":{"other": "off","comments":"off", "strings":"off"},
    "editor.suggestOnTriggerCharacters": false,

    "editor.autoClosingQuotes": "never",
    "editor.autoClosingBrackets": "never",
    "editor.bracketPairColorization.enabled": false,
    "editor.colorDecorators": false,

    // FILE HANDLING
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,

    // UPDATES
    "update.mode": "none",
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,

    // EXTENSIONS > SVELTE
    "svelte.ask-to-enable-ts-plugin": false,
    "svelte.plugin.svelte.note-new-transformation": false,
    "svelte.plugin.svelte.format.config.svelteStrictMode": true,

    "svelte.plugin.css.hover.enable": false,
    "svelte.plugin.html.hover.enable": false,
    "svelte.plugin.html.tagComplete.enable": false,
    "svelte.plugin.typescript.hover.enable": false,

    // OTHER
    "workbench.layoutControl.enabled": false,
    "breadcrumbs.enabled": false,
    "extensions.ignoreRecommendations": true,
    "git.ignoreMissingGitWarning": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "workbench.activityBar.visible": false,
  }
