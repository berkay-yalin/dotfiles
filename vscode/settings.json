{
    // THEME
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "vs-minimal",
    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#0000",
        "focusBorder": "#0000",
        "scrollbarSlider.background": "#0000",
    },

    // TITLEBAR
    "workbench.layoutControl.enabled": false,

    // TABBAR
    "workbench.editor.wrapTabs": true,
    "workbench.editor.labelFormat": "default",
    "workbench.editor.tabSizing": "shrink",

    "workbench.editor.showIcons": false,
    "workbench.editor.decorations.badges": false,
    "workbench.editor.tabCloseButton": "off",

    "workbench.editor.decorations.colors": false,

    // EXPLORER
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 12,
    "explorer.sortOrder": "type",

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "breadcrumbs.enabled": false,

    "explorer.decorations.colors": false,

    // EDITOR
    "editor.fontSize": 14,
    "editor.scrollBeyondLastLine": false,
    "editor.rulers": [79, 100],
    "editor.folding": false,
    "editor.lineNumbers": "relative",
    "editor.renderLineHighlight": "line",

    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    "editor.renderWhitespace": "none",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,

    "editor.autoClosingQuotes": "never",
    "editor.autoClosingBrackets": "never",
    "editor.bracketPairColorization.enabled": false,
    "editor.colorDecorators": false,

    // "editor.hover.enabled": false, // this is the one that disables pop ups
    // "editor.parameterHints.enabled": false,
    "editor.quickSuggestions": {
        "other": "off",
        "comments":"off",
        "strings":"off"
    },
    "editor.suggestOnTriggerCharacters": false,

    // GENERAL
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.tips.enabled": false,
    "editor.accessibilitySupport": "off",
    "workbench.enableExperiments": false,

    // UPDATES
    "update.mode": "none",
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    "telemetry.telemetryLevel": "off",

    // EXTENSIONS > VIM
    "vim.useSystemClipboard": true,

    "vim.handleKeys": {
        "<A-p>": false,
        "<A-f>": false,
        "<A-o>": false,
        "<A-v>": false,
        "<C-f>": false,
        "<C-n>": false
    },

    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["Tab"], "commands": ["tab"] },
        { "before": ["<S-Tab>"], "commands": ["outdent"] }
    ],

    // EXTENSIONS > SVELTE
    "svelte.ask-to-enable-ts-plugin": false,
    "svelte.plugin.svelte.note-new-transformation": false,
    "svelte.plugin.svelte.format.config.svelteStrictMode": true,
    "svelte.plugin.css.hover.enable": false,
    "svelte.plugin.html.hover.enable": false,
    "svelte.plugin.html.tagComplete.enable": false,
    "svelte.plugin.typescript.hover.enable": false,

    // BARRIER
    "extensions.ignoreRecommendations": true,
    "git.ignoreMissingGitWarning": true,
    "html.autoClosingTags": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.activityBar.visible": false,
    "npm.autoDetect": "off",
    "npm.scriptHover": false,
}
