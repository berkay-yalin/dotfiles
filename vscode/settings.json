{
    // theme
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "vs-seti",
    "editor.fontFamily": "'Consolas NF'",
    "window.zoomLevel": -0.5,
    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#0000",
        "focusBorder": "#0000",
    },

    // title bar
    "window.title": "${activeEditorMedium}",

    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "visible",
    "window.customTitleBarVisibility": "never",
    "window.commandCenter": false,

    "workbench.layoutControl.enabled": false,
    "window.enableMenuBarMnemonics": false,
    "window.customMenuBarAltFocus": false,

    // tab bar
    "workbench.editor.wrapTabs": true,
    "workbench.editor.tabSizing": "shrink",

    "breadcrumbs.enabled": false,
    "workbench.editor.labelFormat": "default",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.showIcons": false,
    "workbench.editor.decorations.colors": false,
    "workbench.editor.decorations.badges": false,

    // explorer
    "explorer.sortOrder": "type",
	"explorer.autoReveal": false,
    "explorer.excludeGitIgnore": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "none",
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": false,

    // gutter
    "editor.lineNumbers": "relative",
    "editor.folding": true,
    "editor.glyphMargin": false,
    "scm.diffDecorations": "all",

    // editor
    "editor.fontSize": 15,
    "editor.rulers": [79, 100],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,
    "editor.scrollBeyondLastLine": false,
    "editor.colorDecorators": false,

    "editor.renderWhitespace": "all",
    "editor.occurrencesHighlight": "off",
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingBrackets": "never",
    "editor.autoSurround": "never",
    "editor.bracketPairColorization.enabled": false,

    "editor.lightbulb.enabled": false,
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.unicodeHighlight.ambiguousCharacters": true,

    "editor.parameterHints.enabled": false,
    "editor.suggestOnTriggerCharacters": false,
    "editor.quickSuggestions": {
        "other":"off",
        "comments":"off",
        "strings":"off"
    },
    "files.eol": "auto",
    "files.insertFinalNewline": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": false,
    "files.refactoring.autoSave": false,
    "files.enableTrash": true,

    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,

    "workbench.startupEditor": "newUntitledFile",
    "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "git.terminalAuthentication": false,
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.persistentSessionScrollback": 0,

    // source control
    "diffEditor.ignoreTrimWhitespace": false,
    "git.ignoreMissingGitWarning": true,


    // updates
    "update.mode": "manual",
    "update.showReleaseNotes": true,
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    "telemetry.telemetryLevel": "off",
    "remote.WSL.downloadInBackground": false,
    "workbench.welcomePage.walkthroughs.openOnInstall": false,

    // extensions -> vim
    "editor.cursorBlinking": "solid",
    "vim.useSystemClipboard": true,
    "vim.autoindent": false,
    "vim.enableNeovim": false,

    "vim.handleKeys": {
        "<C-n>": false,
        "<C-z>": false,
        "<C-y>": false,
    },

    "vim.normalModeKeyBindings": [
        { "before": ["w"], "after": ["b"] },
        { "before": [";"], "after": [":"] },
    ],

    "vim.visualModeKeyBindings": [
        { "before": ["w"], "after": ["b"] },
        { "before": ["Tab"], "commands": ["tab"] },
        { "before": ["<S-Tab>"], "commands": ["outdent"] },
    ],

    // other
    "files.restoreUndoStack": true,
    "workbench.tips.enabled": false,
    "workbench.localHistory.enabled": false,
    "workbench.editor.sharedViewState": false,
    "workbench.editor.restoreViewState": false,
    "debug.internalConsoleOptions": "neverOpen",
    "window.autoDetectHighContrast": false,
    "editor.accessibilitySupport": "off",
    "extensions.ignoreRecommendations": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "window.restoreWindows": "none",
    "debug.javascript.codelens.npmScripts": "never",
    "typescript.tsdk": "./node_modules/typescript/lib",
    "svelte.plugin.html.completions.enable": false,
    "svelte.plugin.html.tagComplete.enable": false,
    "svelte.enable-ts-plugin": true,
    // "powershell.enableReferencesCodeLens": false,
    // "powershell.promptToUpdatePowerShell": false,
    // "liveServer.settings.donotShowInfoMsg": true,
    "git.confirmSync": false,
    "editor.minimap.enabled": false,
    "accessibility.signals.terminalBell": {
        "sound": "off"
    },
    "terminal.integrated.enableVisualBell": false,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.editor.empty.hint": "hidden",


    "workbench.editor.editorActionsLocation": "default",

    "workbench.activityBar.location": "hidden",

