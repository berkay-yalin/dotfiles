" backspace doesn't work without this
set backspace=indent,eol,start

" indent with 4 spaces
set expandtab
set tabstop=4

" disable swap files
set noswapfile

" use global clipboard
" set clipboard=unnamedplus
:nnoremap y "+y
:nnoremap p "+p
:vnoremap y "+y
:vnoremap p "+p

" display line numbers
set number
set numberwidth=2

